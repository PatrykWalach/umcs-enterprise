{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"outputs": [".svelte-kit/**"],
			"inputs": [
				"src/**",
				"!src/main/**",
				"vite.config.ts",
				"tailwind.config.ts",
				"svelte.config.js",
				"postcss.config.cjs"
			],
			"dependsOn": ["generate"]
		},
		"lint": {},
		"test": {
			"outputs": ["playwright-report", "test-results"],
			"dependsOn": ["build"],
			"inputs": ["tests/**", "playwright.config.ts"],
			"env": ["CI"]
		},
		"check": {
			"dependsOn": ["generate", "sync"]
		},
		"sync": { "outputs": [".svelte-kit/**"] },
		"generate": {
			"outputs": [".gql/**"],
			"inputs": [
				"src/**/*.svelte",
				"src/**/*.graphqls",
				"src/**/*.ts",
				"codegen.cts",
				".graphqlrc.json"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"preview": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["build"]
		}
	}
}
