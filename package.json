{
	"name": "umcs-enterprise",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "npm run prettier -- --check . && eslint .",
		"prettier": "prettier --plugin-search-dir . --cache --cache-strategy content",
		"format": "npm run prettier -- --write .",
		"prepare": "husky install && npm run generate",
		"docker": "docker-compose up -d",
		"generate": "graphql-codegen --config codegen.cts"
	},
	"lint-staged": {
		"*.*": "npm run prettier -- --write",
		"*.{cjs,mjs,js,cts,mts,ts,svelte,html,md,mdx}": "eslint"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@graphql-codegen/cli": "3.2.2",
		"@graphql-codegen/client-preset": "2.1.1",
		"@graphql-eslint/eslint-plugin": "^3.16.1",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "^1.31.2",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.12.0",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.0",
		"postcss": "^8.4.21",
		"prettier": "^2.8.4",
		"prettier-plugin-java": "^2.1.0",
		"prettier-plugin-svelte": "^2.9.0",
		"prettier-plugin-tailwindcss": "^0.2.4",
		"start-server-and-test": "^2.0.0",
		"svelte": "^3.57.0",
		"svelte-check": "^3.1.4",
		"svelte2tsx": "^0.6.10",
		"tailwindcss": "^3.2.7",
		"tslib": "^2.5.0",
		"typescript": "^5.0.2",
		"vite": "^4.2.0"
	},
	"type": "module",
	"dependencies": {
		"@tailwindcss/line-clamp": "^0.4.2",
		"daisyui": "^2.51.4",
		"graphql": "^16.6.0",
		"graphql-request": "^5.2.0"
	}
}
